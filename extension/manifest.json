{
	"manifest_version":			2,

	"name":						"Force Background Tab",
	"version":					"2.0.0",
	"description":				"Force New Tab Running In Background",
	"icons": {
		"16":					"assets/images/icon_16.png",
		"48":					"assets/images/icon_48.png",
		"128":					"assets/images/icon_128.png"
	},

	"browser_action": {
		"default_title":		"Force Background Tab",
		"default_icon":			"assets/images/icon_16.png",
		"default_popup":		"popup.html"
	},

	"background": {
		"page":					"background.html"
	},

	"content_scripts": [
		{
			"matches":			["http://*/*","https://*/*","ftp://*/*"],
			"js":				["assets/scripts/jquery-1.8.2.min.js","assets/scripts/injection.js"],
			"all_frames":		true,
			"run_at":			"document_start"
		}
	],

	"permissions": [
								"tabs",
								"http://*/*",
								"https://*/*"
	]
}